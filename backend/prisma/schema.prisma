generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url = env("DATABASE_URL")
}

enum UserRole {
  PATIENT
  DOCTOR
}

enum AppointmentStatus {
  SCHEDULED
  COMPLETED
  CANCELLED
}

enum ReminderType {
  APPOINTMENT
  MEDICINE
}

enum HealthRecordType {
  VISIT
  LAB
  PRESCRIPTION
  NOTE
}

enum Gender {
  MALE
  FEMALE
  OTHER
  PREFER_NOT_TO_SAY
}

enum BloodGroup {
  A_POS
  A_NEG
  B_POS
  B_NEG
  AB_POS
  AB_NEG
  O_POS
  O_NEG
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  role      UserRole
  createdAt DateTime @default(now())
  isDemo    Boolean  @default(false)

  profile UserProfile?
  patient Patient?
  doctor  Doctor?

  reminders Reminder[]
}

model UserProfile {
  id     String  @id @default(uuid())
  userId String  @unique
  name   String
  phone  String?
  age    Int?
  gender Gender

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Patient {
  id        String   @id @default(uuid())
  userId    String   @unique
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  healthRecords HealthRecord[]
  healthSummary HealthSummary?
  appointments  Appointment[]
}

model Doctor {
  id             String   @id @default(uuid())
  userId         String   @unique
  hospitalId     String
  specialization String
  experience     Int
  licenseNumber  String   @unique
  createdAt      DateTime @default(now())

  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  hospital Hospital @relation(fields: [hospitalId], references: [id])

  appointments Appointment[]
}

model Hospital {
  id        String @id @default(uuid())
  name      String
  address   String
  latitude  Float?
  longitude Float?
  isDemo Boolean @default(false)

  doctors Doctor[]
}

model Appointment {
  id        String            @id @default(uuid())
  patientId String
  doctorId  String
  dateTime  DateTime
  status    AppointmentStatus @default(SCHEDULED)
  createdAt DateTime          @default(now())

  patient Patient @relation(fields: [patientId], references: [id], onDelete: Cascade)
  doctor  Doctor  @relation(fields: [doctorId], references: [id], onDelete: Cascade)
}

model Reminder {
  id        String       @id @default(uuid())
  userId    String
  type      ReminderType
  message   String
  remindAt  DateTime
  createdAt DateTime     @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model HealthRecord {
  id          String   @id @default(uuid())
  patientId   String
  type        HealthRecordType 
  title       String
  description String?
  createdBy   UserRole 
  recordDate  DateTime @default(now())

  patient Patient @relation(fields: [patientId], references: [id], onDelete: Cascade)
}

model HealthSummary {
  id        String @id @default(uuid())
  patientId String @unique

  bloodGroup BloodGroup
  heightCm   Int?
  weightKg   Float?

  allergies       String?
  chronicDiseases String?
  ongoingMeds     String?

  notes     String?
  updatedAt DateTime @updatedAt

  patient Patient @relation(fields: [patientId], references: [id], onDelete: Cascade)
}
